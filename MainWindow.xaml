<Window x:Class="KP_KW_Generator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KP/KW Generator" Height="500" Width="800">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Typ dokumentu -->
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Typ:" Width="80"/>
            <ComboBox Name="TypBox" Width="120" SelectionChanged="TypBox_SelectionChanged">
                <ComboBoxItem Content="KP"/>
                <ComboBoxItem Content="KW"/>
            </ComboBox>
        </StackPanel>

        <!-- Od kogo / Komu -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,10">
            <TextBlock Name="Komu" Text="Od kogo?" Width="120"/>
            <TextBox Name="OdKogoBox" Width="350"/>
            <TextBlock Text="Data:" Width="50" Margin="20,0,0,0"/>
            <DatePicker Name="DataPicker" Width="150"/>
        </StackPanel>

        <!-- Pozycje -->
        <GroupBox Grid.Row="2" Header="Pozycje">
            <DataGrid Name="PozycjeGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="True"
                      IsReadOnly="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Za co" Binding="{Binding Opis, TargetNullValue=''}" Width="*"/>
                    <DataGridTextColumn Header="Kwota" Binding="{Binding Kwota, UpdateSourceTrigger=PropertyChanged, StringFormat=N2, TargetNullValue=''}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- Suma -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,10,0,5">
            <TextBlock Text="Suma:" Width="120"/>
            <TextBox Name="TxtSuma" Width="120" IsReadOnly="True"/>
        </StackPanel>

        <!-- Słownie -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,5,0,5">
            <TextBlock Text="Słownie:" Width="120"/>
            <TextBox Name="TxtSlownie" Width="650" IsReadOnly="True"/>
        </StackPanel>

        <!-- Przyciski -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,210,0">
                <RadioButton x:Name="RbPojedyncze" Content="Pojedyncze" GroupName="Tryb" IsChecked="True" Margin="0,0,10,0"/>
                <RadioButton x:Name="RbPodwojne" Content="Podwójne" GroupName="Tryb"/>
            </StackPanel>
            <Button Content="Wyczyść" Width="120" Click="Wyczysc_Click" Margin="0,0,10,0"/>
            <Button Content="Generuj PDF" Width="120" Click="GenerujPDF_Click" Margin="0,0,10,0"/>
            <Button Content="Drukuj" Width="120" Click="Drukuj_Click"/>
        </StackPanel>
    </Grid>
</Window>
